<Window x:Class="LeCombatDesCorsaires.Perdu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeCombatDesCorsaires"
        mc:Ignorable="d"
        Title="Perdu" Height="450" Width="800">
    <Grid>
        <Image Source="/Images/ImagePerdu.png" Stretch="Fill"/>
        <Button x:Name="ButRejouer" Content="Rejouer" HorizontalAlignment="Center" Margin="-316,233,0,0" VerticalAlignment="Center" Height="51" Width="168" Click="ButRejouer_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/ButRejouer.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="ButQuitter" Content="Quitter" HorizontalAlignment="Center" Margin="301,233,0,0" VerticalAlignment="Center" Height="51" Width="168" Click="ButQuitter_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/ButQuitter.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
