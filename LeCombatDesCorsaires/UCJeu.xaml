<UserControl x:Class="LeCombatDesCorsaires.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeCombatDesCorsaires"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Mer.jpg"/>
        </Grid.Background>

        <Canvas x:Name="zoneDeJeu" KeyDown="zoneDeJeu_KeyDown" Margin="0,-51,0,30" >

            <Label x:Name="labScore" Content="Trésors : 0" FontSize="20" FontWeight="Bold" Foreground="White" Canvas.Left="10" Canvas.Top="67" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Image x:Name="imgBateau" 
               Source="/Images/bateauSunnyDroite.png" 
               Canvas.Left="320" Canvas.Top="236" RenderTransformOrigin="0.492,0.659" HorizontalAlignment="Center" VerticalAlignment="Center" Height="95" Width="160">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>

                        <RotateTransform/>
                        <TranslateTransform Y="15.776"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Image x:Name="tresor"
                Source="/Images/fruit.png" 
        Width="40" Height="40"
       Canvas.Left="100" Canvas.Top="100"/>


        </Canvas>
    </Grid>
</UserControl>
